FROM python:3.11-slim

# Install system and Node.js dependencies
RUN apt-get update && apt-get install -y \
    build-essential libpq-dev curl \
    libgl1-mesa-glx libglib2.0-0 libsm6 libxext6 libxrender-dev libgl1-mesa-dev \
    && curl -fsSL https://deb.nodesource.com/setup_18.x | bash - \
    && apt-get install -y nodejs \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Create necessary directories
RUN mkdir -p /app/config /app/logs /app/reports

# Copy essential configuration first
COPY config/simulation.yaml /app/config/

# Copy requirements and wheel
COPY requirements-docker.txt .
COPY wheels/ ./wheels/
RUN pip install --no-cache-dir -r requirements-docker.txt \
    && pip install --no-cache-dir ./wheels/carla-0.10.0-cp311-cp311-linux_x86_64.whl

# Copy backend and source code
COPY src/ ./src/
COPY web/backend/ ./web/backend/
COPY setup.py run.py VERSION README.md ./
RUN pip install -e .

# Copy only frontend source (no node_modules or build)
COPY web/frontend/package*.json ./web/frontend/
COPY web/frontend/craco.config.js ./web/frontend/
COPY web/frontend/src/ ./web/frontend/src/
COPY web/frontend/public/ ./web/frontend/public/
WORKDIR /app/web/frontend
RUN npm install

WORKDIR /app

# Expose frontend, backend, and simulator ports
EXPOSE 3000 8000 2000-2002

# Set environment variables
ENV PYTHONPATH=/app
ENV HOST=0.0.0.0
ENV REACT_APP_API_URL=http://localhost:8000
ENV WDS_SOCKET_HOST=0.0.0.0
ENV WDS_SOCKET_PORT=3000

# Create start script
RUN echo '#!/bin/bash\n\
echo "Starting services..."\n\
ls -la /app/config/\n\
if [ ! -f /app/config/simulation.yaml ]; then\n\
    echo "ERROR: Config file not found!"\n\
    exit 1\n\
fi\n\
cd /app/web/backend && python main.py &\n\
BACKEND_PID=$!\n\
sleep 5\n\
cd /app/web/frontend && npm start &\n\
FRONTEND_PID=$!\n\
wait\n' > /app/start.sh && chmod +x /app/start.sh

ENTRYPOINT ["/app/start.sh"]
